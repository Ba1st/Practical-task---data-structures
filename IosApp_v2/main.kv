#:kivy 2.1.0
<SecondScreen>:
    id: scren2
    canvas.before:
        Color:
            rgba:(1,256,1,1)
        Rectangle:
            pos: self.pos
            size: self.size
    Label:
        id: lb1
        text: "text"
        font_size: 70
        size_hint: .05, .05
        pos_hint: {'center_x': 0.5,'center_y': 0.5}
    
    Button:
        text: "Back"
        font_size: 50
        size_hint: .15, .08
        pos_hint: {'center_x': 0.3,'center_y': 0.3}
        on_press: root.main_screen()

<MainScreen>:
    id: scren1
    canvas.before:
        Color:
            rgba:(1,1,1,1)
        Rectangle:
            pos: self.pos
            size: self.size
    Label:
        text: '[b]Perfect[/b] [i][color=4073FF]Store[/color][/i]'
        markup: True
        font_size: 120
        size_hint: .1, .1
        pos_hint: {'center_x': 0.5,'center_y': 0.7}

    Label:
        text: '[b][i]ARTIKLI:[/i][/b]'
        markup: True
        font_size: 60
        size_hint: .1, .1
        pos_hint: {'center_x': 0.2,'center_y': 0.55}

    Button:
        text: 'Kruh'
        font_size: 40
        size_hint: .17, .08
        pos_hint: {'center_x': 0.2,'center_y': 0.4}
        on_press: root.changeScreen("Kruh")

    Button:
        text: 'Sladoled'
        font_size: 40
        size_hint: .17, .08
        pos_hint: {'center_x': 0.4,'center_y': 0.4}
        on_press: root.changeScreen("Sladoled")
    
    Button:
        text: 'Jaja'
        font_size: 40
        size_hint: .17, .08
        pos_hint: {'center_x': 0.6,'center_y': 0.4}
        on_press: root.changeScreen("Jaja")

    Button:
        text: 'Majoneza'
        font_size: 40
        size_hint: .18, .08
        pos_hint: {'center_x': 0.8,'center_y': 0.4}
        on_press: root.changeScreen("Majoneza")

    Button:
        text: 'Jabuke'
        font_size: 40
        size_hint: .17, .08
        pos_hint: {'center_x': 0.2,'center_y': 0.25}
        on_press: root.changeScreen("Jabuke")

    Button:
        text: 'Nutella'
        font_size: 40
        size_hint: .17, .08
        pos_hint: {'center_x': 0.4,'center_y': 0.25}
        on_press: root.changeScreen("Nutella")

    Button:
        text: 'Meso'
        font_size: 40
        size_hint: .17, .08
        pos_hint: {'center_x': 0.6,'center_y': 0.25}
        on_press: root.changeScreen("Meso")

    Button:
        text: 'Jogurt'
        font_size: 40
        size_hint: .17, .08
        pos_hint: {'center_x': 0.8,'center_y': 0.25}
        on_press: root.changeScreen("Jogurt")