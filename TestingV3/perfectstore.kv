        md_bg_color: 0, 153/250, 1, 255/250
        theme_text_color: "Custom"
        theme_icon_color: "Custom"
        icon_color: "white"
        text_color: "black"
        elevation: 2
        pos_hint: {'center_x': 0.2,'center_y': 0.1}
