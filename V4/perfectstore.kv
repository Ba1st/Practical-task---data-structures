<MainScreen>:

    id: screen1

    MDBottomNavigation:
        id: Navigator

        MDBottomNavigationItem:
            name: "Main"
            text: 'Main'
            icon: 'home'

            Label:
                id: mainTitle
                text: '[b][color=000000][size=90]P[/size][size=85]erfect[/size][/color][i][color=4073FF][size=90]S[/size]tore[/color][/i][/b]'
                markup: True
                font_size: 75
                size_hint: 0.1, 0.1
                pos_hint: {'center_x': 0.5,'center_y': 0.9}

            MDLabel: 
                id: HelloText
                text: '[b][color=000000]Hello\nWe are hoping that you have a great day[/color][/b]'
                markup: True
                text_size: self.size
                halign: "center"
                valign: "center"
                size_hint: (0.5,0.5)
                pos_hint: {"center_x": 0.5, "center_y": 0.7}
                elevetion: 2

            MDCard:
                elevation: 5
                orientation: "vertical"
                radius: [25]
                size_hint: (.8, .7)
                pos_hint: {"center_x": 0.5, "center_y": .2}

                MDLabel:
                    text: "     News:"
                    color: 0,0,0
                    bold: True
                    size_hint: (.7,.3)
                    text_size: self.size
                    halign: "left"
                    valign: "center"

                ScrollView:

                    MDList:
                        spacing: 10
                        TwoLineRightIconListItem:
                            text: "[b]Lemon price today[/b]"
                            secondary_text: "Today the prices of lemons skyroketed"
                            ImageRightWidget:
                                source: "images/index.jpg"
                        TwoLineRightIconListItem:
                            text: "[b]Fanta cans withdrawn from sale[/b]"
                            secondary_text: "Larger amounts of ethylene oxide are found in cans of Fanta in stores"
                            ImageRightWidget:
                                source: "images/001603604.webp"
                        TwoLineRightIconListItem:
                            text: "[b]Customs duty reduction[/b]"
                            secondary_text: "The government has reduced customs duties on goods from the UK"
                            ImageRightWidget:
                                source: "images/istockphoto-1034405652-612x612.jpg"
                        TwoLineRightIconListItem:
                            text: "[b]Problems with the euro[/b]"
                            secondary_text: "Many shops ran out of euro banknotes due to careless customers"
                            ImageRightWidget:
                                source: "images/euro.png"
                        TwoLineRightIconListItem:
                            text: "[b]Prohibition of price increases[/b]"
                            secondary_text: "The government has banned raising the prices of bread, milk and meat"
                            ImageRightWidget:
                                source: "images/o_420342_1024.jpg"
                        TwoLineListItem:
                            text: ""
                            secondary_text: ""

            MDFloatingActionButtonSpeedDial:
                id: speedDial
                label_text_color: "black"
                icon: "dots-horizontal"
                data: app.data
                root_button_anim: False
                hint_animation: False
                bg_hint_color: "white"

        MDBottomNavigationItem:
            name: "Bills"
            text: 'Bills'
            icon: 'credit-card-outline'

            MDRaisedButton:
                id: printAll
                markup: True
                text: "[b]Print[/b]"
                pos_hint: {'center_x': 0.2,'center_y': 0.8}
                font_size: 35
    
            MDCard:
                id: BillsCard
                orientation: 'vertical'
                pos_hint: {'center_x': 0.4,'center_y': 0.55}
                size_hint: .5, .2
                md_bg_color: "lightgrey"
                elevation: 2
                MDLabel:
                    text: "No Bills"
                    pos_hint: {'center_x': 0.6,'center_y': 0.0}

        MDBottomNavigationItem:
            name: "Amount"
            text: 'Amount Sold'
            icon: 'cash-multiple'

        MDBottomNavigationItem:
            name: "Calendar"
            text: 'Calendar'
            icon: 'calendar'
            
            MDRectangleFlatIconButton:
                id: OpenCalendar
                icon: "open-in-app"
                text: '[b]Open Calendar[/b]'
                markup: True
                font_size: 32
                md_bg_color: 0, 153/250, 1, 255/250
                theme_text_color: "Custom"
                theme_icon_color: "Custom"
                icon_color: "white"
                text_color: "black"
                elevation: 2
                pos_hint: {'center_x': 0.5,'center_y': 0.5}
                on_press: app.DatePicker()